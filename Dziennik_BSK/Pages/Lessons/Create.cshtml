@page 
@model Dziennik_BSK.Pages.Lessons.CreateModel

@{
    ViewData["Title"] = "Lekcja - Dodaj";
}

<h2>Dodaj now¹ lekcjê</h2>

<h4>Lekcja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lesson.LessonDate" class="control-label"></label>
                <input asp-for="Lesson.LessonDate" class="form-control" />
                <span asp-validation-for="Lesson.LessonDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lesson.Subject" class="control-label"></label>
                <input asp-for="Lesson.Subject" class="form-control" />
                <span asp-validation-for="Lesson.Subject" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Lesson.Class" class="control-label"></label>
                <input asp-for="Lesson.Class" class="form-control" />
                <span asp-validation-for="Lesson.Class" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lesson.Topic" class="control-label"></label>
                <input asp-for="Lesson.Topic" class="form-control" />
                <span asp-validation-for="Lesson.Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lesson.Teacher" class="control-label"></label>
                <select asp-for="Lesson.TeacherId" class="form-control" 
                        asp-items="@Model.TeacherSL">
                    <option>--- Wybierz nauczyciela ---</option>
                </select>
                <span asp-validation-for="Lesson.TeacherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
