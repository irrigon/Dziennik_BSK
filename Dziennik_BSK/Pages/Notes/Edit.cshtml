@page "{id:int}"
@model Dziennik_BSK.Pages.Notes.EditModel

@{
    ViewData["Title"] = "Uwaga - Edytuj";
}

<h2>Edytuj</h2>

<h4>Uwaga</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Note.Id" />
            <div class="form-group">
                <label asp-for="Note.AddDate" class="control-label"></label>
                <input asp-for="Note.AddDate" class="form-control" />
                <span asp-validation-for="Note.AddDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.Content" class="control-label"></label>
                <input asp-for="Note.Content" class="form-control" />
                <span asp-validation-for="Note.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.IsNegative" class="control-label"></label>
                <select asp-for="Note.IsNegative" class="form-control">
                    <option>Tak</option>
                    <option>Nie</option>
                </select>
                <span asp-validation-for="Note.IsNegative" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.Student" class="control-label"></label>
                <select asp-for="Note.StudentId" class="form-control"
                        asp-items="@Model.StudentSL">
                    <option>--- Wybierz ucznia ---</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Note.Teacher" class="control-label"></label>
                <select asp-for="Note.TeacherId" class="form-control"
                        asp-items="@Model.TeacherSL">
                    <option>--- Wybierz nauczyciela ---</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
